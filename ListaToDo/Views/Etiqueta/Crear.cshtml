
@model ListaToDo.ViewModels.EtiquetaViewModel;

<!DOCTYPE html>

<html>
<head>
    <title>Etiquetas</title>
    <link rel="stylesheet" href="~/css/categorias.css">

</head>
<body style="margin: 5px;">

    <h1 style="font-size:30px; color:#fff; padding:20px; font-weight:700; text-transform:uppercase; text-align:center;">✔✔✔  Agregar etiqueta  ✔✔✔</h1>



    @if (TempData["mensaje"] != null)
    {

        <div class="alert alert-success  alert-dismissible fade show" role="alert">

            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }
    @if (TempData["Error"] != null)
    {

        <div class="alert alert-danger  alert-dismissible fade show" role="alert">

            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }

    <div class="container">

        <div class="row">
            <div class="col-md-12">

                <div class="alert alert-success" style="display:none;">
                    <span class="glyphicon glyphicon-ok"></span> Drag table row and cange Order
                </div>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr class="warning">
                            <td colspan="6">
                                @using (var form = Html.BeginForm("CrearModificar", "Etiqueta", FormMethod.Post))
                                {
                                    @Html.HiddenFor(model => model.EditableItem.Id)
                                    <br>
                                    <div class="wrapper">
                                        @Html.TextBoxFor(model => model.EditableItem.NombreEtiqueta, new { placeholder = "Agregar nueva etiqueta" })


                                        <div>
                                            <button id="btn" type="submit" class="btn btn-success btn-lg"><i class="fas fa-save">@(Model.EditableItem.Id > 0 ? "  Actualizar" : "  Agregar")</i></button>
                                        </div>
                                    </div>
                                    @Html.ValidationSummary()
                                }
                            </td>
                        </tr>
                        <tr class="titulo-tabla">
                            <td></td>
                            <td class="text-center">Nombre</td>
                            <td class="text-center">Fecha creación</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-success">
                            @foreach (var item in Model.Eti)
                            {
                            <tr class="danger">

                                <td class="text-center">
                                    <a href="/Etiqueta/Editar/@item.Id">
                                        @item.Id
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Etiqueta/Editar/@item.Id">
                                        @item.NombreEtiqueta
                                    </a>
                                </td>
                                <td class="text-center">
                                    @item.FechaCreacion.ToShortDateString()
                                </td>


                                <td class="text-center">

                                    <button class="btn btn-danger delete"
                                            data-id="@item.Id"
                                            data-controller="Etiqueta"
                                            data-action="Borrar"
                                            data-body-message="Si elimina una etiqueta, todas las tareas de esa etiqueta serán borradas de forma permanente">
                                        <i class="fas fa-trash">  Eliminar</i>
                                    </button>
                                </td>
                            </tr>
                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script src="~/js/push.min.js"></script>

        <script>
            window.onload = function () {
                Push.Permission.request();
            }


            document.getElementById('btn').onclick = function () {
                Push.create('Categoria agregada', {
                    body: 'La categoría ha sido agregada con éxito',
                    icon: '~/img/diskette.png',
                    timeout: 5000,

                })
            }

        </script>
        @*<partial name="_NotificationPartial" />*@
    </body>

</html>